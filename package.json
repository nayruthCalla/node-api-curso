{
  "name": "curso-node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "jest": {
    "verbose": true
  },
  "scripts": {
    "pretest": "eslint .",
    "dev": "nodemon index.js",
    "start": "node index.js",
    "test:e2e": "jest --verbose --testPathPattern e2e --globalSetup ./e2e/globalSetup --globalTeardown ./e2e/globalTeardown --runInBand",
    "test:unit": "jest --verbose --testPathIgnorePatterns e2e",
    "test": "npm run test:e2e && npm run test:unit",
    "lint": "eslint .",
    "docs:generate": "jsdoc -c jsdoc.conf --readme README-docs.md",
    "docs:deploy": "rm -rf docs && npm run docs:generate && gh-pages -d docs"
  },
  "dependencies": {
    "@shelf/jest-mongodb": "^1.1.0",
    "apollo-datasource-rest": "^0.6.1",
    "apollo-server": "^2.8.1",
    "apollo-server-express": "^2.8.1",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eslint-plugin-jest": "^22.7.2",
    "express": "^4.16.4",
    "graphql": "^14.4.2",
    "graphql-middleware": "^3.0.3",
    "graphql-tools": "^4.0.5",
    "helmet": "^3.20.0",
    "i": "^0.3.6",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.0",
    "mongodb": "^3.2.7",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "docdash": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "jsdoc": "^3.6.2",
    "jsdoc-http-plugin": "^0.3.0",
    "mongodb-memory-server": "^5.1.5",
    "nodemon": "^1.19.1",
    "tree-kill": "^1.2.1"
  }
}
